@using MvcTicariOtomasyon.Models.Sınıflar
@model List<Personel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<table class="table table-bordered" style="margin-top:20px;">

    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Personel Soyadı</th>
        <th>Görsel</th>
        <th>Branş</th>
        <th>Satışlar</th>
        <th>İşlem</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.PersonelID</td>
            <td>@item.PersonelAd</td>
            <td>@item.PersonelSoyad</td>
            <td>
                <img src="@item.PersonelGorsel" alt=""  style="width:100px;">
            </td>
            <td>@item.Departmans.BransAd</td>
            <td>
                <a class="btn btn-warning btn-sm" href="/Brans/DepartmanPersonelSatıs/@item.PersonelID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Detay
                </a>
            </td>
            <td>
                <a class="btn btn-info btn-sm" href="/Personel/PersonelGetir/@item.PersonelID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Düzenle
                </a>
                <a class="btn btn-danger btn-sm" href="/Personel/PersonelSil/@item.PersonelID">
                    <i class="fas fa-trash">
                    </i>
                    Sil
                </a>
               

            </td>
        </tr>

    }

</table>
<a href="/Personel/PersonelEkle/" class="btn btn-primary">Yeni Personel Ekle</a>











