@using MvcTicariOtomasyon.Models.Sınıflar
@model List<SatısHareket>

@{
    ViewBag.Title = "CariSatisHareket";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h2>Müşteri Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Müşteri Adı Soyadı : @ViewBag.cari </li>
</ol>
<table class="table table-condensed">
    <tr>
        <th>Satış ID</th>

        <th>Ürün Adı</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam Tutar</th>
        <th>Tarih</th>
        <th>İşlem</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.SatisID</td>

            <td>@x.uruns.UrunAd</td>
            <td>@x.Adet</td>
            <td>@x.Fiyat</td>
            <td>@x.ToplamTutar</td>
            <td>@x.Tarih</td>
            <td><a href="#" class="btn btn-default" style=" background-color:dodgerblue">Yazdır</a></td>
        </tr>
    }


</table>







