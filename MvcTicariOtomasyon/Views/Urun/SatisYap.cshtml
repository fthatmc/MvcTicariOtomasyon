@model MvcTicariOtomasyon.Models.Sınıflar.SatısHareket

@{
    ViewBag.Title = "SatisYap";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Satış Sayfası</h2>
<br />

<form class="form-group" method="post">
    @Html.LabelFor(x => x.Urunid)
    <input type="text" name="Urunid" value="@ViewBag.deger1" class="form-control" readonly />
    @*readonly o hücreye mudahale etmeyi engeller enable visible false ile aynı*@
    <br />
    @Html.LabelFor(x => x.Personelid)
    @Html.DropDownListFor(x => x.Personelid, (List<SelectListItem>)ViewBag.personel, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Cariid)
    @Html.TextBoxFor(x => x.Cariid, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Adet)
    <input type="number" name="Adet" class="form-control" max="20" min="1" placeholder="Adet Girin" id="txt1" onchange="sum();" />
    <br />
    @Html.LabelFor(x => x.Fiyat)
    <input type="text" name="Fiyat" value="@ViewBag.deger2" class="form-control" id="txt2" onkeyup="sum();" />
    <br />
    @Html.LabelFor(x => x.ToplamTutar)
    <input type="text" name="ToplamTutar" value="0" class="form-control" id="txt3" readonly/>
    @*@Html.TextBoxFor(x => x.ToplamTutar, new { @class = "form-control" })*@
    <br />
   
    <button class="btn btn-info">Satış Yap</button>
</form>



<script>

    function sum() {

        var sayi1 = document.getElementById('txt1').value;

        var sayi2 = document.getElementById('txt2').value;

        var sonuc = parseInt(sayi1) * parseInt(sayi2);

        if (typeof sonuc === "number") {

            document.getElementById('txt3').value = sonuc;

        }

    }

</script>



