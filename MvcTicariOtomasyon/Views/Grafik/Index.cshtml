    grafik.AddSeries(
        name: "Veriler",
        chartType:"Pie", /*Pie,Bar,Buble,Doughnut,Area,*/
        xValue: new[] {"Beyaz Eşya","TV", "Bilgisayar", "Küçük Ev Aletleri" },
        yValues: new[] { 500, 300, 100, 600 });;

    grafik.Write();


}