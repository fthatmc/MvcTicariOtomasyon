@using MvcTicariOtomasyon.Models.Sınıflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-bordered" style="margin-top:20px;">

    <tr>
        
        <th>Seri/Sıra No</th>
        <th>Vergi Dairesi</th>
        <th>Toplam ₺</th>
        <th>Saat</th>
        <th>Tarih</th>
        <th>İşlem</th>
        <th>Yeni Kalem</th>
       
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            
            <td>@item.FaturaSeriNo / @item.FaturaSıraNo</td>
           
            <td>@item.VergiDairesi</td>
           
            <td>@item.Toplam ₺</td>
            <td>@item.Saat</td>
            <td>@item.Tarih</td>
            <td>
                <a class="btn btn-info btn-sm" href="/Fatura/FaturaGetir/@item.FaturaID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Düzenle
                </a>
                <a class="btn btn-warning btn-sm" href="/Fatura/FaturaKalemDetay/@item.FaturaID">
                    <i class="fas fa-trash">
                    </i>
                    Detay
                </a>

            </td>
           
            <td>
                <a class="btn btn-info btn-sm" href="/Fatura/FaturaGetir/@item.FaturaID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Kalem
                </a>
            </td>
        </tr>

    }

</table>
<a href="/Fatura/FaturaEkle/" class="btn btn-primary">Yeni Fatura Ekle</a>
<br /><br />
<button type="button" class="btn btn-primary" style="background-color:#9f3737" 
        data-toggle="modal" data-target="#Modal1">PopUp Penceresi</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">PopUp Dialog Ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.FaturaSeriNo</td>
                            <td>@x.FaturaSıraNo</td>
                            <td>@x.Toplam</td>
                        </tr>
                    }

                </table>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>









