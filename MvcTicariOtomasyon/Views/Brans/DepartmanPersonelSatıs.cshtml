@using MvcTicariOtomasyon.Models.Sınıflar
@model List<SatısHareket>

@{
    ViewBag.Title = "DepartmanPersonelSatıs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<br />
<h2>Personel Satış Sayfası Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Personel Adı Soyadı: @ViewBag.PerAdSoyad </li>
</ol>
<table class="table table-condensed">
    <tr>
        <th>Sıra No</th>

        <th>Cari Adı Soyadı</th>
        <th>Ürün Adı</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam Tutar</th>
        <th>Tarih</th>
        <th>İşlem</th>
    </tr>
    @{ int sirano = 0;}
    @foreach (var x in Model)
    {
        <tr>
            <td>@{sirano++;} @sirano</td>

            <td>@x.Caris.CariAd  @x.Caris.CariSoyad</td>
            <td>@x.uruns.UrunAd</td>
            <td>@x.Adet</td>
            <td>@x.Fiyat ₺</td>
            <td>@x.ToplamTutar ₺</td>
            <td>@x.Tarih</td>
            <td><a href="#" class="btn btn-default" style=" background-color:dodgerblue">Yazdır</a></td>
        </tr>
    }


</table>





