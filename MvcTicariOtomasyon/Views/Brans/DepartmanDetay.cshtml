@using MvcTicariOtomasyon.Models.Sınıflar
@model List<Personel>

@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<br />
<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.DptAd</li>
</ol>
<table class="table table-hover">
    <tr>
        <th>Sıra No</th>
        <th>Personel</th>
        
       
        <th>Satışlar</th>
    </tr>
    @{ int sirano = 0;}
    @foreach (var x in Model)
    {
        <tr>
            <td>@{sirano++;} @sirano</td>
            <td>@x.PersonelAd @x.PersonelSoyad</td>
            
           
            <td><a href="/Brans/DepartmanPersonelSatıs/@x.PersonelID" class="btn btn-warning">Detay</a></td>
        </tr>
    }


</table>



