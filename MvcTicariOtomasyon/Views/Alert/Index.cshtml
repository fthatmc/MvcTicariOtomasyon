
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script> @*bunu siteden aldık sweetalert*@
<script src="~/Scripts/jquery-3.4.1.js"></script> @*bunu da scrip dosyasından sürükledik*@
<br />
<button class="btn btn-primary" id="btn1">Buton1</button>
<button class="btn btn-warning" id="btn2">Buton2</button>
<button class="btn btn-info" id="btn3">Buton3</button>
<button class="btn btn-success" id="btn4">Buton4</button>
<button class="btn btn-danger" id="btn5">Buton5</button>

<script>
    $('#btn1').click(function () {
        swal("Merhaba");
    });

    $('#btn2').click(function () {
        swal("Başlık", "Mesaj", "success");
    });

    $('#btn3').click(function () {
        swal("Burası Başlık", "Burası mesaj kısmı");
    });
    $('#btn4').click(function () {
        swal({
            title: "Good job!",
            text: "You clicked the button!",
            icon: "success",
            button : "Evet",
        });
    });
    $('#btn5').click(function () {
        swal({
            title: "Are you sure?",
            text: "Once deleted, you will not be able to recover this imaginary file!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    swal("Poof! Your imaginary file has been deleted!", {
                        icon: "success",
                    });
                } else {
                    swal("Your imaginary file is safe!");
                }
            });
    });
    
</script>

